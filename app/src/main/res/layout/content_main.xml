<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".DialogActivity">


    <Button
            android:text="Display Simple Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simpleDialog" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.258" app:layout_constraintVertical_bias="0.065"/>
    <Button
            android:text="Display Custom Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog"
            android:layout_marginBottom="356dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.268"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/simpleDialog"
            app:layout_constraintVertical_bias="0.065"/>
    <Button
            android:text="Display Choice Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choiceDialog" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/customDialog" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintVertical_bias="0.046"/>
    <Button
            android:text="Display Date Picker Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePickerButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/choiceDialog" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintVertical_bias="0.088"/>
</androidx.constraintlayout.widget.ConstraintLayout>